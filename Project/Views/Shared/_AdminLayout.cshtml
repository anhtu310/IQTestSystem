<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FinalProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FinalProject.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="bg-dark text-white p-3 vh-100" style="width: 250px; text-align:center">
            <a class="text-white text-decoration-none fw-bold fs-4 d-block mb-3" asp-controller="Admin" asp-action="Index">
                Dashboard
            </a>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="User" asp-action="Index">Quản lý người dùng</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Category" asp-action="Index">Quản lý danh mục</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Test" asp-action="Index">Quản lý bài test</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Question" asp-action="Index">Quản lý câu hỏi</a>
                </li>
                <!-- Thêm nút Logout -->
                <li class="nav-item">
                    <form asp-controller="Authentication" asp-action="Logout" method="post">
                        <button type="submit" class="nav-link text-white bg-transparent border-0 w-100 text-start">
                            Đăng xuất
                        </button>
                    </form>
                </li>
            </ul>
        </nav>

        <!-- Nội dung chính -->
        <div class="container-fluid flex-grow-1 p-4">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="text-center mt-4">
        <p>&copy; 2025 - Admin Panel</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>